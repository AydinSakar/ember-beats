<div class="playback">
  <div class="btn-toolbar">

    <div class="btn-group" >
      <button type="button" class="btn" {{action start}}>
        <i class="icon-play" ></i>
      </button>

      <button type="button" class="btn" {{action stop}}>
        <i class="icon-stop"></i>
      </button>
    </div>

    <div class="btn-group" >
    </div>

    <div class="btn-group" >
      <button type="button" class="btn" {{action decreaseTempo}}>
        <i class="icon-minus-sign"></i>
      </button>
      <button type="button" class="btn"><strong>{{tempo}} bpm</strong></button>
      <button type="button" class="btn" {{action increaseTempo}}>
        <i class="icon-plus-sign"></i>
      </button>
    </div>

    <div class="btn-group" >
      <button type="button" class="btn"><strong>{{display}}</strong></button>
      <button type="button" class="btn" data-toggle="buttons-checkbox">
        <i class="icon-adjust"></i>
      </button>
    </div>

    <div class="btn-group">
      <a class="btn dropdown-toggle " data-toggle="dropdown" href="#">
        Presets
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
          <li>
            <a {{action switchToPreset 'default'}}>Default</a>
            <a {{action switchToPreset 'song1'}}>Song1</a>
            <a {{action switchToPreset 'simple1'}}>Simple1</a>
            <a {{action switchToPreset 'simple2'}}>Simple2</a>
            <a {{action switchToPreset 'simple12'}}>Simple12</a>
            <a {{action switchToPreset '15step'}}>15 Step</a>
          </li>
      </ul>
    </div>
  </div>
</div>
